<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="hu.ait.android.forecast.WeatherScreen">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="3dp"
        android:textColor="#ffffff"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/tvCoord_lon"
        android:layout_toRightOf="@+id/tvName"
        android:layout_alignBottom="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tvCoord_lat"
        android:layout_toRightOf="@+id/tvCoord_lon"
        android:layout_alignBottom="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginLeft="15sp"
        android:textColor="#616161"
        android:textSize="40sp"/>
    <ImageView
        android:id="@+id/ivWeather"
        android:layout_margin="30dp"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvTemp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:textColor="#616161"
        android:textSize="40sp"
        android:layout_below="@+id/tvTemp"/>
    <TextView
        android:id="@+id/tvTemp_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#616161"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/tvTemp_max"
        android:layout_alignBottom="@+id/tvTemp_max"/>
    <TextView
        android:id="@+id/tvWeatherMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTemp_min"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="25sp"
        android:textColor="#616161"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_below="@+id/tvTemp_max"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:id="@+id/tvPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvCloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvRain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
